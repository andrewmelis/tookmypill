<%- model_class = PillTakenEvent -%>
<div class="page-header">
  <h1><%=t 'pill_events_title' %></h1>
  <h3><%=t_boolean @latest_pill.try(:taken_today?) %></h3>
</div>

<%= render :partial => 'form' %>

<% if @pill_taken_events.any? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('timestamps')%></th>
    </tr>
  </thead>
  <tbody>
    <% @pill_taken_events.order(created_at: :desc).each do |pill_taken_event| %>
    <tr>
      <td><%=l pill_taken_event.created_at.in_time_zone('America/Chicago'), format: :readable %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
