<p id="notice"><%= notice %></p>

<%= render 'form' %>

<hr>

<h1>Listing Pill Taken Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pill_taken_events.reverse.each do |pill_taken_event| %>
      <tr class="<%= cycle('odd','even') %>">
        <td><%= "Took my pill at #{pill_taken_event.created_at.localtime}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
